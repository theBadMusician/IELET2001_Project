{
  "name": "api",
  "version": "1.0.0",
  "description": "NodeJS server for MCUniversity project using Express MVC framework and React/Redux front-end",
  "private": true,
  "scripts": {
    "pc-dev-server": "set NODE_ENV=development&& node ./bin/www",
    "pc-prd-server": "set NODE_ENV=production&& node ./bin/www",
    "pc-tst-server": "set NODE_ENV=test&& node ./bin/www",
    "dev-server": "nodemon .bin/www",
    "client": "npm run start --prefix client",
    "client-pc": "npm run start-pc --prefix client",
    "buildrun": "cd ../client && npm run build && cd ../api && npm run pc-prd-server",
    "debug-server": "DEBUG=api:* npm run devstart",
    "start-all": "concurrently \"npm run server\" \"npm run client\"",
    "start-all-pc": "concurrently \"npm run server\" \"npm run client-pc\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theBadMusician/MCUniversity.git"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "jade": "~1.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
